<resources>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">#3F51B5</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">#303F9F</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/wxalbum_slide_in</item>
        <item name="android:windowExitAnimation">@anim/wxalbum_slide_out</item>
    </style>


    <style name="DemoButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DemoInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DemoTasksTextStyle" parent="DemoInfoTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


</resources>
