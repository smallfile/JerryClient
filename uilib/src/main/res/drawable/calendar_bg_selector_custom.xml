<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_selected="true" android:drawable="@drawable/calendar_bg_circle_selected"/>
    <item android:state_pressed="true" android:drawable="@drawable/calendar_bg_circle_selected"/>
    <item app:calendarCurrentMonth="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/calendar_custom_background_disabled"/>
        </shape>
    </item>
    <item app:calendarToday="true" android:drawable="@drawable/calendar_bg_circle_today"/>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/calendar_custom_background"/>
        </shape>
    </item>
</selector>
