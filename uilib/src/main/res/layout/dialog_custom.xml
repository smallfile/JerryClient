<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="320dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/dialog_custom_title"
        android:text="@string/dialog_custom_title"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:gravity="center_vertical"
        android:textColor="@color/dialog_custom_message"
        android:text="@string/dialog_custom_message"
        android:textSize="16sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dialog_custom_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_custom_cancel"
            android:textColor="@color/dialog_custom_btn"
            android:background="@drawable/dialog_custom_left_btn_normal"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/dialog_custom_divider"
            />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_custom_ok"
            android:textColor="@color/dialog_custom_btn"
            android:background="@drawable/dialog_custom_right_btn_normal"
            />

    </LinearLayout>
</LinearLayout>
